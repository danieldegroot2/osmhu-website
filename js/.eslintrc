{
  "extends": "airbnb-base",
  "rules": {
    "indent": [ "error", "tab" ],
    "no-tabs": [ "error", { "allowIndentationTabs": true } ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "prefer-template": 0
  },
  "plugins": [
    "jest"
  ],
  "env": {
    "jest/globals": true
  }
}
