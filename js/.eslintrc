{
  "extends": "airbnb-base",
  "rules": {
    "indent": [ "error", "tab" ],
    "no-tabs": [ "off" ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "prefer-template": "off",
    "max-len": ["error", 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false,
      "ignoreRegExpLiterals": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }]
  },
  "plugins": [
    "jest"
  ],
  "env": {
    "jest/globals": true
  }
}
